@model WebHalk.Models.Categories.CategoryCreateViewModel

<div class="container">
    <h2>Додати нову категорію</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Name">Назва</label>
            <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Image">Зображення (URL)</label>
            <input type="text" class="form-control" id="Image" name="Image" asp-for="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Додати</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
